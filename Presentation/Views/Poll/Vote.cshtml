@model NeilMichaelportelliEPSolution.Domain.Poll

<h2>@Model.Title</h2>
<p>Choose an option to vote:</p>

<form method="post" asp-action="Vote" asp-route-id="@Model.Id">
    <div>
        <label>
            <input type="radio" name="option" value="1" /> @Model.Option1Text
        </label>
    </div>
    <div>
        <label>
            <input type="radio" name="option" value="2" /> @Model.Option2Text
        </label>
    </div>
    <div>
        <label>
            <input type="radio" name="option" value="3" /> @Model.Option3Text
        </label>
    </div>

    <button type="submit">Vote</button>
</form>
